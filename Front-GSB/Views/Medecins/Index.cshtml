@model IEnumerable<Model.Medecin>

@{
    ViewBag.Title = "Médecins";
}

<h2>Liste des médecins</h2>

<p>
    @Html.ActionLink("Créer un nouveau médecin", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Département")
        </th>
        <th>
            @Html.DisplayName("Prénom")
        </th>
        <th>
            @Html.DisplayName("Nom")
        </th>
        <th>
            @Html.DisplayName("Adresse")
        </th>
        <th>
            @Html.DisplayName("Spécialité")
        </th>
        <th>
            @Html.DisplayName("Téléphone")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Departement.dep_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prenom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adresse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.specialite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.id_medic }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_medic }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.id_medic })
        </td>
    </tr>
}

</table>
